# TitanFlow Environment Configuration
# Copy this file to .env and fill in your values

# --- API Keys ---
# Alpaca Trading API (Paper/Live)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Polygon.io (Optional - for secondary data feed)
POLYGON_API_KEY=your_polygon_api_key

# --- Database Configuration ---
# PostgreSQL (Transactional Data)
POSTGRES_USER=titan_user
POSTGRES_PASSWORD=titan_password
POSTGRES_DB=titan_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# QuestDB (Time-Series Data)
QUESTDB_HOST=questdb
QUESTDB_PG_PORT=8812
QUESTDB_HTTP_PORT=9000
QUESTDB_ILP_PORT=9009

# Redis (Message Broker)
REDIS_HOST=redis
REDIS_PORT=6379

# --- Microservices ---
# Risk Management
RISK_MAX_DAILY_LOSS=0.03  # 3% Max Daily Loss
RISK_MAX_POSITION_SIZE=0.10 # 10% Max Position Size

# Signal Engine
MODEL_PATH=./services/signal/checkpoints/hybrid_v1.pt

# Execution Mode
# paper = fake money with real market feed
# live = real broker execution (requires approved risk/execution flow)
EXECUTION_MODE=paper
PAPER_STARTING_CASH=100000
PAPER_RISK_PER_TRADE=0.10
PAPER_MIN_CONFIDENCE=0.25
PAPER_PORTFOLIO_PUBLISH_SECONDS=2
PAPER_MAX_MODELS=10

